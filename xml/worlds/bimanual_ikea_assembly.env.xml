<?xml version="1.0" encoding="utf-8"?>
<Environment>
  <camtrans>2.87 -0.99 1.23</camtrans>
  <camrotationaxis>-0.75 -0.54 0.38 122</camrotationaxis>
  <camfocal>3.2756526</camfocal>
  
  <!-- Add robot bases (left and right) as independent kinbody instead of embedded base -->
  
  <!-- Add reference frame -->
  <Kinbody file="../objects/reference_frame.kinbody.xml"/>

  <!-- Add robots -->
  <Robot file="../robots/denso_ft_sensor_gripper.robot.xml" name="denso_right">
    <translation>0 0.529 0</translation>
  </Robot>

  <Robot file="../robots/denso_ft_sensor_gripper.robot.xml" name="denso_left">
    <translation>0 -0.529 0</translation>
  </Robot>
  
  <!-- Add robot bases -->
  <Kinbody file="../objects/bimanual_denso_base.kinbody.xml" name="bimanual_base">
    <translation>0 0 -0.001</translation>
  </Kinbody>
  
  <!-- Add workspace constraint -->
  <Kinbody name="floorwall">
    <Body type="static">
      <Geom type="box">
        <extents>0.01 2 1.02</extents>
        <Translation>-1.01 0 0.41</Translation>
        <diffusecolor>0.267 0.267 1</diffusecolor>
        <transparency>0.5</transparency>
      </Geom>
      <Geom type="box">
        <extents>1.22 2 0.01</extents>
        <Translation>0.2 0 -0.60</Translation>
        <diffusecolor>0.267 0.267 1</diffusecolor>
        <transparency>0.5</transparency>
      </Geom>
    </Body>
  </Kinbody>
  
  <!-- Add Table -->
  <Kinbody name="table">
    <Translation>0.65 0 -0.226</Translation>
    <Body name="base" type="static">
      <Geom type="box">
        <extents>0.4 0.5 0.364</extents>
        <diffusecolor>1 0.8 0.6</diffusecolor>
        <transparency>0.2</transparency>
      </Geom>
    </Body>
  </Kinbody>
  
  <!-- Ensenso camera -->
  <Kinbody name="camera" file="../objects/ensenso.kinbody.xml">
    <rotationaxis>0 0 1 90</rotationaxis>
    <rotationaxis>0 1 0 -90</rotationaxis>
    <Translation>1.175 0 1</Translation>
    <transparency>0.5</transparency>
    <rotationaxis>0 1 0 -45</rotationaxis>  <!-- Camera tilt angle -->
  </Kinbody>
  
  <!-- Add objects -->
</Environment>
